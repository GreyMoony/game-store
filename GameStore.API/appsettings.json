{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "Fatal",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log-.txt",
                    "rollingInterval": "Day",
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/exceptions/exceptions-.txt",
                    "rollingInterval": "Day",
                    "restrictedToMinimumLevel": "Error",
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext" ]
    },
    "ConnectionStrings": {
        "GameStoreDb": "Server=(localdb)\\mssqllocaldb;Database=GameStoreDb;Trusted_Connection=True;MultipleActiveResultSets=true",
        "IdentityDb": "Server=(localdb)\\mssqllocaldb;Database=IdentityDb;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "MongoDB": {
        "ConnectionString": "mongodb://localhost:27017/Northwind",
        "DatabaseName": "Northwind",
        "LogsCollection": "entity-change-logs",
        "CategoryCollection": "categories",
        "OrderCollection": "orders",
        "OrderDetailsCollection": "order-details",
        "ProductCollection": "products",
        "ShipperCollection": "shippers",
        "SupplierCollection": "suppliers"
    },
    "PaymentService": {
        "VisaRequestUri": "http://localhost:5000/api/payments/visa",
        "IBoxRequestUri": "http://localhost:5000/api/payments/ibox"
    },
    "AuthService": {
        "AuthenticationUri": "https://localhost:5037/api/auth",
        "UsersUri": "https://localhost:5037/api/users"
    },
    "InvoiceSettings": {
        "ValidityDays": 7
    },
    "AllowedHosts": "*",
    "Jwt": {
        "Secret": "YourSuperSecureSecretKeyThatIsAtLeast32CharactersLong"
    }
}
